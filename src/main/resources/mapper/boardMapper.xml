<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.BoardMapper">
    
    <!-- 게시글 작성 -->
    <insert id="insertBoard" parameterType="board">
        <selectKey keyProperty="id" resultType="long" order="BEFORE">
            select seq_board.nextval from dual
        </selectKey>
        insert into tb_board (
                id,
                user_id,
                title,
                content
        ) values (
                #{id},
                #{user_id},
                #{title},
                #{content}
        )
    </insert>

    <!-- 게시글 검색 -->
    <select id="selectBoardById" parameterType="long" resultType="board">
        select
                id, 
                user_id,
                title,
                content,
                hit,
                input_time,
                last_modified_time
        from 
                tb_board
        where  
                id = #{id}
    </select>

    <!-- 게시글 검색 -->
    <select id="selectBoardAndMemberById" parameterType="long" resultType="map">
        select
                b.id, 
                b.user_id,
                m.name,
                b.title,
                b.content,
                b.hit,
                b.input_time,
                b.last_modified_time
        from 
                tb_board b join tb_member m on (b.user_id = m.user_id)
        where  
                b.id = #{id}
    </select>

    <!-- 게시글 수정 -->
    <update id="updateBoard" parameterType="board">
        update tb_board set
                title = #{title},
                content = #{content},
                last_modified_time = sysdate
        where 
                id = #{id}
    </update>

    <!-- 게시글 삭제 -->
    <delete id="deleteBoard" parameterType="long">
        delete from tb_board where id = #{id}
    </delete>
    
</mapper>